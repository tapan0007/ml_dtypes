# Common class for backend platforms like Qemu or Zebu

class BePlat(object):
  def __init__(self):
    self.sshHost = None
    self.sshUser = None
    self.sshCommand = None
    self.tongaDevice = "0000:00:04.0"
    # Create on the fly to avoid issues with git chmod
